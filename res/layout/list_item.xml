<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="fill_parent"
	android:background="@drawable/cat_back_list"
	android:layout_height="110dip"
	android:layout_margin="10dip"
	tools:context=".MainActivity" >
	
    <LinearLayout
        android:layout_marginLeft="5dip"
        android:id="@+id/use_profile_image_text"
        android:layout_width="80dip"
        android:layout_height="95dip"
         android:paddingTop="2dp"
        android:orientation="vertical" >
	    <ImageView
			android:id="@+id/user_list_image"
			android:layout_width="60dip"
	        android:layout_height="60dip"
	        android:layout_marginTop="10dp"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:src="@drawable/ic_launcher" />
	    <TextView
	        android:id="@+id/user_text"
	        android:layout_width="60dip"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="高圆圆"
	        android:textColor="#85AED6" />

	</LinearLayout>
	<LinearLayout
	    android:layout_toRightOf="@id/use_profile_image_text"
	    android:layout_marginRight="20dip"
	    android:id="@+id/list_info"
	    android:layout_marginTop="5dip"
	    android:paddingTop="3dp"
	    android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:orientation="horizontal" >
		<TextView
		    android:id="@+id/list_act_theme"
	        android:layout_width="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
			android:layout_height="20dip"
			android:text="主题：打篮球" />
		<!-- <ImageView
		    android:id="@+id/mappic"
		        	    android:layout_width="fill_parent"
		        	    android:layout_height="15dip"
		        	    android:gravity="right"
		        	    android:layout_marginLeft="90dp"
		        	    android:layout_gravity="right"
		        	    android:src="@drawable/weizhi1"
		 /> -->
   </LinearLayout>
		 
		<LinearLayout
	    android:layout_toRightOf="@id/use_profile_image_text"
	    android:layout_marginRight="20dip"
	    android:id="@+id/list_info"
	    android:layout_marginTop="25dip"
	    android:paddingTop="3dp"
	    android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:orientation="vertical" >  
        <View
		    android:layout_width="fill_parent"
			android:layout_height="3dip"
		    >
		</View> 
		<TextView
	        android:id="@+id/list_act_main_page"
	        android:layout_width="wrap_content"
			android:layout_height="20dip"
			 android:ellipsize="end"
			 android:singleLine="true"
			android:text="正文：今天晚上有木有..." />
		
		<View
		    android:layout_width="fill_parent"
			android:layout_height="3dip"
		    >
		</View>
		<TextView
	        android:id="@+id/list_act_time"
	        android:layout_width="fill_parent"
			android:layout_height="20dip"
			android:text="时间：2014/07/20 08:30" />
		
		<View
		    android:layout_width="fill_parent"
			android:layout_height="3dip"
		    >
		</View>
		<TextView
	        android:id="@+id/list_act_people_number"
	        android:layout_width="fill_parent"
			android:layout_height="20dip"
			android:text="人数：2/18" />
	</LinearLayout>
	
		<LinearLayout
	    android:layout_toRightOf="@id/list_info"
	    android:id="@+id/list_right"
	    android:layout_marginTop="5dip"
	    android:layout_width="fill_parent"
	    android:layout_marginLeft="-25dp"
        android:layout_height="90dip"
        android:orientation="horizontal" >
		<ImageView
		    android:id="@+id/list_act_right"
	        android:layout_width="20dp"
			android:layout_height="40dip"
			android:layout_gravity="center"
			android:src="@drawable/right"/>"
		 
   </LinearLayout>
</RelativeLayout>