<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="45.0dip"
	    android:background="@color/loginColor"
	    android:gravity="center_vertical"
	    >

	    <ImageView
	        android:id="@+id/title_bar_menu_btn"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_alignParentBottom="true"
	        android:layout_marginLeft="1dp"
	        android:layout_marginRight="3dp"
	        
	        android:gravity="center"
	        android:src="@drawable/fanhui" />
	
	    <TextView
	        android:id="@+id/title_bar_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:ellipsize="end"
	        android:gravity="center"
	       
	        android:singleLine="true" 
	        android:layout_alignTop="@+id/title_bar_menu_btn" 
	        android:text="@string/app_name"
	        android:textColor="#ffffff"
	        android:textSize="22sp" />
	
	    <Button
	        android:id="@+id/submit_act" 
	        android:layout_width="60dp"
	        android:layout_height="30dp"
	        android:layout_alignParentRight="true"
	        android:gravity="center"
	        android:layout_marginRight="5dp" 
	        android:layout_alignTop="@+id/title_bar_menu_btn" 
	        android:background="@drawable/shape"
	        android:text="@string/submit_act"
	        android:textColor="@color/loginColor"
	        />
	</RelativeLayout>
	<View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@drawable/ic_shelf_category_divider" />
    <AutoCompleteTextView
	    android:id="@+id/editText2"
	    android:layout_width="300dp"
	    android:layout_height="30dip"
	    android:layout_gravity="center"
	    android:layout_marginTop="15dp"
	    android:background="@drawable/border"
	    android:ems="10"
	    android:hint="@string/account"
 >
	</AutoCompleteTextView>
</LinearLayout>
