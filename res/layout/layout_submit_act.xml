<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="45.0dip"
	    android:background="@color/loginColor"
	    android:gravity="center_vertical"
	    >

	    <ImageView
	        android:id="@+id/title_bar_menu_btn"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_alignParentBottom="true"
	        android:layout_marginLeft="1dp"
	        android:layout_marginRight="3dp"
	        
	        android:gravity="center"
	        android:src="@drawable/fanhui" />
	
	    <TextView
	        android:id="@+id/title_bar_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:ellipsize="end"
	        android:gravity="center"
	        android:singleLine="true" 
	        android:layout_alignTop="@+id/title_bar_menu_btn" 
	        android:text="发布活动"
	        android:textColor="#ffffff"
	        android:textSize="20sp" />
	
	    <Button
	        android:id="@+id/submit_act" 
	        android:layout_width="50dp"
	        android:layout_height="30dp"
	        android:layout_alignParentRight="true"
	        android:gravity="center"
	        android:layout_marginRight="5dp" 
	        android:layout_alignTop="@+id/title_bar_menu_btn" 
	        android:background="@drawable/shape"
	        android:text="@string/submit_act"
	        android:textColor="@color/loginColor"
	        />
	</RelativeLayout>
	<View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@drawable/ic_shelf_category_divider" />
	<LinearLayout
	    android:layout_marginTop="10dip" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    
	    <AutoCompleteTextView
		    android:id="@+id/act_main_actvity"
		    android:layout_width="fill_parent"
		    android:layout_height="35dip"
		    android:layout_gravity="center"
		    android:background="@drawable/shape"
		    android:ems="10"
		    android:layout_marginLeft="10dip"
		    android:hint="活动主题"
		    android:textSize="16sp"
            android:textColorHint="@color/fontColor"
		    android:layout_marginRight="10dip"  >
		</AutoCompleteTextView>
	</LinearLayout>
	<LinearLayout
	    android:layout_marginTop="10dip" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
	    <!-- <TextView 
	        android:layout_marginLeft="10dip"
	        android:layout_width="70dip"
		    android:layout_height="30dip"
		    android:text="活动分类"
		    android:gravity="center" /> -->
		<Spinner
		    android:id="@+id/type_option"
		    android:layout_width="fill_parent"
		    android:layout_height="35dip"
		    android:textSize="10sp"
		    android:layout_marginLeft="10dp"
		    android:gravity="left"
	        android:layout_gravity="center"
	        android:background="@drawable/shape"
	        android:layout_marginRight="10dip"  >
		</Spinner>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip" 
	    android:orientation="horizontal">
	    <TextView
		    android:id="@+id/act_startDate_actvity"
		    android:layout_width="fill_parent"
		    android:layout_height="35dip"
		    android:layout_gravity="center"
		    android:background="@drawable/shape"
		    android:ems="10"
		    android:layout_marginLeft="10dip"
		    android:hint="开始日期"
		    android:textSize="16sp"
            android:textColorHint="@color/fontColor"
		    android:layout_marginRight="10dip"  >
		</TextView>
		
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip" 
	    android:orientation="horizontal">
	    <TextView
		    android:id="@+id/act_startTime_actvity"
		    android:layout_width="fill_parent"
		    android:layout_height="35dip"
		    android:layout_gravity="center"
		    android:background="@drawable/shape"
		    android:ems="10"
		    android:layout_marginLeft="10dip"
		    android:hint="开始时间"
		    android:textSize="16sp"
            android:textColorHint="@color/fontColor"
		    android:layout_marginRight="10dip"  >
		</TextView>
		
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip" 
	    android:orientation="horizontal">
	    <AutoCompleteTextView
		    android:id="@+id/user_count"
		    android:layout_width="fill_parent"
		    android:layout_height="35dip"
		    android:layout_gravity="center"
		    android:background="@drawable/shape"
		    android:ems="10"
		    android:layout_marginLeft="10dip"
		    android:hint="参与人数"
		    android:textSize="16sp"
            android:textColorHint="@color/fontColor"
		    android:layout_marginRight="10dip"  >
		</AutoCompleteTextView>
		
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip" 
	    android:orientation="horizontal">
	    <AutoCompleteTextView
		    android:id="@+id/act_location"
		    android:layout_width="fill_parent"
		    android:layout_height="35dip"
		    android:layout_gravity="center"
		    android:background="@drawable/shape"
		    android:ems="10"
		    android:layout_marginLeft="10dip"
		    android:hint="活动地点"
		    android:textSize="16sp"
            android:textColorHint="@color/fontColor"
		    android:layout_marginRight="10dip"  >
		</AutoCompleteTextView>
		
	</LinearLayout>
		<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginTop="10dip" 
	    android:orientation="horizontal">
	    <AutoCompleteTextView
		    android:id="@+id/act_content"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="@drawable/shape"
		    android:ems="10"
		    android:gravity="top"
		    android:layout_marginLeft="10dip"
		    android:hint="活动详情"
		    android:layout_marginBottom="20dip"
		    android:textSize="16sp"
            android:textColorHint="@color/fontColor"
		    android:layout_marginRight="10dip"  >
		</AutoCompleteTextView>
		
	</LinearLayout>
</LinearLayout>
