<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/title"
	    android:layout_width="fill_parent"
	    android:layout_height="45.0dip"
	    android:background="@color/loginColor"
	    android:gravity="center_vertical"
	    >
	    <ImageView
	        android:id="@+id/title_bar_menu_btn"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_alignParentBottom="true"
	        android:layout_marginLeft="1dp"
	        android:layout_marginRight="3dp"
	        
	        android:gravity="center"
	        android:src="@drawable/fanhui" />
	
	    <TextView
	        android:id="@+id/title_bar_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:ellipsize="end"
	        android:gravity="center"
	       
	        android:singleLine="true" 
	        android:layout_alignTop="@+id/title_bar_menu_btn" 
	        android:text="@string/app_name"
	        android:textColor="#ffffff"
	        android:textSize="22sp" />
	    
	    <Button
	        android:id="@+id/login" 
        	android:layout_width="60dp"
        	android:layout_height="30dp"
        	android:layout_alignParentRight="true"
        	android:gravity="center"
        	android:layout_marginRight="5dp" 
        	android:layout_alignTop="@+id/title_bar_menu_btn" 
        	android:background="@drawable/shape"
        	android:text="@string/next_step" 
        	android:textColor="@color/loginColor"
			android:text="加入"/><!-- click to participate -->
	</RelativeLayout>
    
    
    <LinearLayout
		android:layout_width="match_parent"
        android:layout_height="100dip"
        android:orientation="horizontal" >
    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="100dip"
	        android:orientation="vertical" >
	        <ImageView 
		       android:id="@+id/activity_info_protrait"
	           android:layout_width="70dip"
	           android:layout_height="70dip"
	           android:background="#F00"
	           android:gravity="center_horizontal"
		       android:layout_marginLeft="20dip"
		       android:layout_marginTop="10dip"
	           android:src="@drawable/pho_test"/><!--head imagine  -->
	        <TextView 
	           android:id="@+id/activity_info_user_name"
	           android:layout_width="70dip"
	           android:layout_height="20dip"
	           android:layout_marginLeft="20dip"
	           android:gravity="center_horizontal"
	           android:text="noah"
	            /><!-- user name --> 
	    </LinearLayout>
	     
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="100dip"
	        android:orientation="vertical" >
	        <TextView 
	           android:id="@+id/activity_info_user_name"
	           android:layout_width="wrap_content"
	           android:layout_height="20dip"
	           android:layout_marginLeft="20dip"
	           android:layout_marginTop="20dip"
	           android:gravity="center_horizontal"
	           android:text="今天去打篮球啊啊啊"/><!-- object -->
	        <TextView 
	           android:id="@+id/activity_info_time_range"
	           android:layout_width="70dip"
	           android:layout_height="20dip"
	           android:layout_marginLeft="20dip"
	           android:gravity="center_horizontal"
	           android:text="7:00-8:00"/><!-- Time Range -->
	        <TextView 
	           android:id="@+id/activity_info_map_link"
	           android:layout_width="70dip"
	           android:layout_height="20dip"
	           android:layout_marginLeft="20dip"
	           android:gravity="center_horizontal"
	           android:autoLink="map"
	           android:textColor="#00F123"
	           android:text="火星"/><!-- map link -->
	    </LinearLayout>
    
	</LinearLayout>
	
	<TextView 
	    android:id="@+id/activity_info_map_link"
	    android:layout_marginLeft="20dip"
	    android:layout_marginRight="20dip"
	    android:layout_width="match_parent"
	    android:layout_height="300dip"
	    android:text="今天晚上7:00到8:00在火星打篮球，求队友！ 求队友！求队友！求队友！求队友！求队友！求队友！求队友！求队友！"/><!--main body  -->

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" >
	    
		<LinearLayout 
			android:layout_width="200dip"
	        android:layout_height="match_parent"
	        android:orientation= "vertical">
	        
		    <TextView 
		    	android:id="@+id/activity_participate_num"
			    android:layout_marginLeft="10dip"
			    android:layout_width="match_parent"
			    android:layout_height="20dip"
			    android:text="参加人数 100/800"/><!--participation people  -->
		    
		    <LinearLayout 
				android:layout_width="200dip"
		        android:layout_height="match_parent"
		        android:orientation= "horizontal">
		        
		        <ImageView 
			        android:id="@+id/activity_info_protrait_001"
				    android:layout_width="30dip"
   					android:layout_height="30dip"
   					android:background="#F00"
   					android:gravity="center_horizontal"
					android:layout_marginLeft="10dip"
					android:clickable="true"
   					android:src="@drawable/pho_test"/><!--head imagine  -->
		        <ImageView 
			        android:id="@+id/activity_info_protrait_002"
		            android:layout_width="30dip"
   					android:layout_height="30dip"
   					android:background="#F00"
   					android:gravity="center_horizontal"
					android:layout_marginLeft="10dip"
					android:clickable="true"
   					android:src="@drawable/pho_test"/><!--head imagine  -->
		         <ImageView 
			        android:id="@+id/activity_info_protrait_003"
		            android:layout_width="30dip"
		            android:layout_height="30dip"
		            android:background="#F00"
		            android:gravity="center_horizontal"
			        android:layout_marginLeft="10dip"
			        android:clickable="true"
		            android:src="@drawable/pho_test"/><!--head imagine  -->
		         
		        <Button
		            android:layout_marginTop="5dip"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					android:id="@+id/more_people"
					android:text="更多" />
	        </LinearLayout>
		</LinearLayout>
		
	</LinearLayout>
</LinearLayout>
