<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgColor"
    android:orientation="vertical" >

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="45.0dip"
    android:background="@color/loginColor"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/title_bar_menu_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="3dp"
        
        android:gravity="center"
        android:src="@drawable/fanhui" />

    <TextView
        android:id="@+id/title_bar_name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
       
        android:singleLine="true" 
        android:layout_alignTop="@+id/title_bar_menu_btn" 
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <Button
        android:id="@+id/search" 
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="5dp" 
        android:layout_alignTop="@+id/title_bar_menu_btn" 
        android:background="@drawable/shape"
        android:text="@string/searchWord" 
        android:textColor="@color/loginColor"
        />
 
</RelativeLayout>




<RelativeLayout 
    android:layout_marginTop="15dp"
    android:layout_width="fill_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="50.0dip"
    android:layout_gravity="center"
    android:gravity="center_vertical" >
      <TextView
	     android:id="@+id/texeView"
	     android:layout_width="60dp"
	     android:layout_height="35dp"
	     android:gravity="center"
	     android:text="@string/classs"
	     android:textSize="16dp"
	     android:layout_centerVertical="true"
	     android:drawableLeft="@drawable/classes"
	     android:textColor="@color/loginColor">
       </TextView>
      <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_centerVertical="true"
        android:dropDownWidth="10dp"
        android:background="@drawable/shape"
      />
              
 	      
</RelativeLayout>

<RelativeLayout 
    android:layout_height="50.0dip"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_vertical" >
      <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/texeView"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/date"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:textColor="@color/loginColor"
            android:drawableLeft="@drawable/date"
          >
          </TextView>
      <TextView
        android:id="@+id/date"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@drawable/shape"
      />
              
 	      
</RelativeLayout>	      

<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_vertical" >
      <TextView
          android:layout_marginTop="10dp"
            android:id="@+id/texeView"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="@string/time"
            android:textSize="16dp"
             android:textColor="@color/loginColor"
            android:drawableLeft="@drawable/time"
          >
          </TextView>
      <TextView
        android:id="@+id/time"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:dropDownWidth="10dp"
        android:background="@drawable/shape"
        android:textSize="15sp"
      />
 	      
</RelativeLayout>

<RelativeLayout 
    android:layout_height="50.0dip"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_vertical" >
      <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/adress"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/address"
            android:textSize="16dp"
            android:layout_centerVertical="true"
            android:textColor="@color/loginColor"
            android:drawableLeft="@drawable/location"
          >
          </TextView>
      <TextView
        android:id="@+id/time"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="60dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:dropDownWidth="10dp"
        android:background="@drawable/shape"
        android:textSize="15sp"
      />
              
 	      
</RelativeLayout>

</LinearLayout>